<odoo>
    <data>

        <record model="ir.ui.view" id="pos_config_template">
            <field name="name">pos.config.combo</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <h2>Combo</h2>
                    <div class="row mt16 o_settings_container" id="combo">
                        <div class="col-12 col-lg-6 o_setting_box" title="Active Combo">
                            <div class="o_setting_right_pane">
                                <label for="dynamic_combo" string="Active Combo"/>
                                <div class="content-group mt16">
                                    <field name="dynamic_combo"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
